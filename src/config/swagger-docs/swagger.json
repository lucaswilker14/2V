        "properties" : {
          "username" : {
            "type" : "string"
          },
          "password" : {
            "type" : "string"
          }
        },

        "example" : {
          "username": "user123",
          "password" : "userPassword"
        }
      },

      "Admin - Set System Date" : {
        "required" : [ "hour", "minute" ],
        "properties" : {
